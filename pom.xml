<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>lu.luxtrust.portal</groupId>
    <artifactId>Flowers</artifactId>
    <packaging>pom</packaging>

    <version>1.3-SNAPSHOT</version>

    <modules>
        <module>flowers-ui</module>
        <module>flowers-common</module>
        <module>flowers-key-store</module>
        <module>flowers-services</module>
        <module>flowers-api</module>
        <module>flowers-config</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.8</java.version>
        <springframework.boot.version>1.5.9.RELEASE</springframework.boot.version>
        <luxtrust.saml.api.version>1.3-LUXTRUST-INTERNAL</luxtrust.saml.api.version>
        <owasp.cvss.score>10.0</owasp.cvss.score>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencyManagement>

        <dependencies>
            <dependency>
                <groupId>lu.luxtrust.portal</groupId>
                <artifactId>flowers-common</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>lu.luxtrust.portal</groupId>
                <artifactId>flowers-common</artifactId>
                <version>${project.version}</version>
                <scope>test</scope>
                <type>test-jar</type>
            </dependency>
            <dependency>
                <groupId>io.rest-assured</groupId>
                <artifactId>rest-assured</artifactId>
                <version>3.0.7</version>
                <scope>test</scope>
                <exclusions>
                    <exclusion>
                        <groupId>org.codehaus.groovy</groupId>
                        <artifactId>groovy</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>org.codehaus.groovy</groupId>
                <artifactId>groovy</artifactId>
                <version>2.4.13</version>
                <scope>test</scope>
            </dependency>
            <dependency>
